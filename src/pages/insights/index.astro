---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const insights = await getCollection('insights');
const sorted = insights.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const pillarLabels: Record<string, string> = {
  ai: 'ğŸ¤– AI',
  cloud: 'â˜ï¸ Cloud',
  future: 'ğŸ”® Future',
  leadership: 'ğŸ¯ Leadership',
};
---
<BaseLayout title="Insights" description="Articles on AI agents, cloud architecture, platform engineering, and the future of development.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="mb-12">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4">Insights</h1>
      <p class="text-gray-400 text-lg">Thoughts on AI, cloud, platform engineering, and where technology is headed.</p>
    </div>
    <div class="space-y-6">
      {sorted.map(post => {
        const wordCount = post.body.split(/\s+/).length;
        const readingTime = Math.ceil(wordCount / 200);
        return (
          <a href={`/insights/${post.slug}`} class="group block p-6 rounded-xl border border-gray-800 hover:border-blue-500/50 bg-gray-900/30 hover:bg-gray-900/60 transition-all">
            <div class="flex flex-wrap items-center gap-3 mb-3">
              {post.data.pillar && (
                <span class="px-2 py-0.5 rounded text-xs bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                  {pillarLabels[post.data.pillar] ?? post.data.pillar}
                </span>
              )}
              {post.data.tags.slice(0, 3).map(tag => (
                <span class="px-2 py-0.5 rounded text-xs bg-blue-500/10 text-blue-400">{tag}</span>
              ))}
            </div>
            <h2 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">{post.data.title}</h2>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">{post.data.excerpt}</p>
            <div class="flex items-center gap-3 text-xs text-gray-500">
              <span>{post.data.author}</span>
              <span>Â·</span>
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <span>Â·</span>
              <span>{readingTime} min read</span>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</BaseLayout>
